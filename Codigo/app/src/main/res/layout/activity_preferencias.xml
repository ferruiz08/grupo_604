<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PreferenciasActivity">

    <Button
        android:id="@+id/buttonCmdBorrar"
        android:layout_width="207dp"
        android:layout_height="42dp"
        android:layout_marginTop="28dp"
        android:background="#FF9800"
        android:fontFamily="casual"
        android:text="Borrar"
        android:textColor="#009688"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listViewPreferencias" />

    <TextView
        android:id="@+id/textViewTituloPreferencias"
        android:layout_width="411dp"
        android:layout_height="49dp"
        android:background="#06DDCF"
        android:fontFamily="casual"
        android:text="Eventos"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ListView
        android:id="@+id/listViewPreferencias"
        android:layout_width="409dp"
        android:layout_height="430dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTituloPreferencias" />

</androidx.constraintlayout.widget.ConstraintLayout>